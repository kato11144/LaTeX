% --- キー設定 ---
\usepackage{xkeyval}
\define@key{titlepage}{year}{\def\titlepage@year{#1}}
\define@key{titlepage}{title}{\def\titlepage@title{#1}}
\define@key{titlepage}{author}{\def\titlepage@author{#1}}
\define@key{titlepage}{id}{\def\titlepage@id{#1}}
\define@key{titlepage}{department}{\def\titlepage@department{#1}}
\define@key{titlepage}{date}{\def\titlepage@date{#1}}
\define@key{titlepage}{supervisor}{\def\titlepage@supervisor{#1}}

% --- タイトルページのカスタマイズ ---
\newcommand{\customtitlepage}[1]{
    \setkeys{titlepage}{#1}
    \begin{titlepage}
        \begin{center}
            \vspace*{1.2cm}

            % --- 年度 ---
            {\Large \titlepage@year ~~ 修士学位論文} \\[3.2cm]

            % --- タイトル ---
            {\Large 題 ~ 目} \\[0.6cm]
            {\LARGE \titlepage@title} \\[4.2cm]

            % --- 報告者 ---
            {\Large 報 ~ 告 ~ 者} \\[0.8cm]
            {\Large \titlepage@author} \\[0.3cm]
            {\Large 学籍番号 \titlepage@id} \\[2.2cm]

            % --- 所属 ---
            {\Large \titlepage@department} \\[3.0cm]

            % --- 提出日 ---
            {\Large \titlepage@date 提出} \\[1.2cm]

            % --- 指導教員 ---
            {\Large 指導教員 ~ \titlepage@supervisor ~ 教授}

        \end{center}
    \end{titlepage}
}
