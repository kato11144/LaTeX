\ProvidesPackage{custom}

% --- 色の定義 ---
\definecolor{ThemeColor}{rgb}{0.273, 0.343, 0.414}

% --- パッケージ ---
\usepackage{xcolor}
\usepackage{amsmath}
\usepackage{amssymb}
\usepackage{caption}
\usepackage{multicol}
\usepackage{multirow}
\usepackage{booktabs}

% --- 基本設定 ---
\renewcommand{\baselinestretch}{1.5}

% --- フォント設定 ---
\usepackage{xeCJK}
\setCJKmainfont{Noto Sans CJK JP}
\setCJKsansfont{Noto Sans CJK JP}

% --- カスタムテーマ設定 ---
\usetheme{default}
\usefonttheme{professionalfonts}

% --- レイアウトのカスタマイズ ---
\setbeamertemplate{itemize item}{-}
\setbeamertemplate{itemize subitem}{-}
\setbeamertemplate{footline}[frame number]
\setbeamertemplate{navigation symbols}{}

% --- タイトルページのカスタマイズ ---
\newcommand{\customtitlepage}{
    \begin{center}
        \vskip 2.0em
        \Large
        \textbf{\inserttitle} \\
        \vskip -1.0em
        \noindent\textcolor{ThemeColor!50}{\rule{0.7\linewidth}{1.5pt}} \\
        \begin{center}
            \footnotesize
            \insertinstitute \\
            \insertauthor \\
            \insertdate
        \end{center}
    \end{center}
}
\defbeamertemplate*{title page}{custom}[1][]{
    \customtitlepage
}

% --- フレームタイトルのカスタマイズ ---
\setbeamerfont{frametitle}{size=\Large, series=\bfseries}
\setbeamercolor{frametitle}{fg=white, bg=ThemeColor}
\setbeamertemplate{frametitle}{
    \nointerlineskip
    \begin{beamercolorbox}[sep=0.3cm, ht=2.2em, wd=\paperwidth, leftskip=0.3cm]{frametitle}
        \vskip -2.0ex
        \strut\insertframetitle
        \vskip -0.8ex
    \end{beamercolorbox}
}

% --- 目次のカスタマイズ ---
\setbeamercolor{section in toc}{fg=normal text.fg}
\AtBeginSection[]{
\begin{frame}{Outline}
    \tableofcontents[currentsection]
\end{frame}
}
